<!DOCTYPE html>
<html lang="pt-br">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Admin Login - Distribuidora de Bebidas</title>
<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f0f0f0;
        display: flex;
        flex-direction: column;
        align-items: center;
        margin: 0;
        block-size: 100vh;
    }
    .navbar {
        inline-size: 100%;
        background-color: #333;
        color: white;
        padding: 10px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    .navbar .logo {
        display: flex;
        align-items: center;
        cursor: pointer;
    }
    .navbar .logo img {
        block-size: 50px;
        margin-inline-end: 10px;
    }
    .navbar .actions {
        display: flex;
        align-items: center;
    }
    .main-content {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-grow: 1;
        inline-size: 100%;
    }
    .container {
        background-color: #fff;
        padding: 20px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
        border-radius: 8px;
        text-align: center;
        inline-size: 300px;
    }
    input[type="text"], input[type="password"] {
        inline-size: 100%;
        padding: 10px;
        margin: 10px 0;
        border: 1px solid #ccc;
        border-radius: 4px;
    }
    button {
        background-color: #333;
        color: #fff;
        border: none;
        padding: 10px 20px;
        cursor: pointer;
        border-radius: 4px;
        margin-block-start: 10px;
    }
    .error-message {
        color: red;
        margin-block-start: 10px;
    }
</style>
</head>
<body>

<!-- Navbar -->
<div class="navbar">
    <div class="logo" onclick="window.location.href='/'">
        <img src="logo.png" alt="Distribuidora Logo">
        <h1>Distribuidora de Bebidas</h1>
    </div>
    <div class="actions" id="user-actions">
        <!-- Adicione aqui botões ou links de ações do usuário, se necessário -->
    </div>
</div>

<div class="main-content">
    <div class="container">
        <h2>Admin Login</h2>
        <input type="text" id="username" placeholder="Usuário">
        <input type="password" id="password" placeholder="Senha">
        <button onclick="adminLogin()">Entrar</button>
        <div id="error-message" class="error-message"></div>
    </div>
</div>

<script>
    async function adminLogin() {
        const username = document.getElementById('username').value;
        const password = document.getElementById('password').value;
        
        const response = await fetch('/admin-login', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ username, password })
        });

        const data = await response.json();

        if (data.success) {
            window.location.href = '/admin-panel';
        } else {
            document.getElementById('error-message').textContent = 'Erro: Usuário ou senha errados';
        }
    }
</script>

</body>
</html>
