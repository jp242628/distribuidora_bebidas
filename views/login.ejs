<!DOCTYPE html>
<html lang="pt-br">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Login - Distribuidora de Bebidas</title>
<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f0f0f0;
        display: flex;
        justify-content: center;
        align-items: center;
        block-size: 100vh;
        margin: 0;
    }
    .container {
        background-color: #fff;
        padding: 20px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
        border-radius: 8px;
        text-align: center;
        inline-size: 300px;
    }
    input {
        inline-size: 100%;
        padding: 10px;
        margin: 10px 0;
        border: 1px solid #ccc;
        border-radius: 4px;
    }
    button {
        background-color: #333;
        color: #fff;
        border: none;
        padding: 10px 20px;
        cursor: pointer;
        border-radius: 4px;
        margin-block-start: 10px;
    }
    .admin-login {
        background-color: #007BFF;
        margin-block-start: 20px;
    }
    .error {
        color: red;
        margin-block-start: 10px;
    }
</style>
</head>
<body>

<div class="container">
    <h2>Insira seu e-mail para entrar ou se cadastrar.</h2>
    <input type="email" id="email" placeholder="E-mail">
    <button onclick="login()">Entrar</button>
    <button class="admin-login" onclick="adminLogin()">Login como Admin</button>
    <div id="error-message" class="error"></div>

    <!-- Formulário de Cadastro -->
    <div id="register-form" style="display:none;">
        <h2>Cadastro</h2>
        <input type="text" id="nome" placeholder="Nome">
        <input type="text" id="endereco" placeholder="Endereço">
        <input type="text" id="telefone" placeholder="Telefone">
        <button onclick="register()">Cadastrar</button>
    </div>
</div>

<script>
    function validateEmail(email) {
        const re = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
        return re.test(email);
    }

    async function login() {
        const email = document.getElementById('email').value;
        const errorMessage = document.getElementById('error-message');

        if (!validateEmail(email)) {
            errorMessage.textContent = "Eita, esse e-mail não parece correto.";
            return;
        }

        const response = await fetch('/login', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ email })
        });

        const data = await response.json();

        if (data.success) {
            alert("Bem-vindo de volta! Você está logado.");
            window.location.href = '/'; // Redirecionar para a página inicial
        } else {
            if (confirm("E-mail não encontrado. Deseja criar um novo cadastro?")) {
                document.getElementById('register-form').style.display = 'block';
            } else {
                errorMessage.textContent = "E-mail não encontrado.";
            }
        }
    }


    async function register() {
        const email = document.getElementById('email').value;
        const nome = document.getElementById('nome').value;
        const endereco = document.getElementById('endereco').value;
        const telefone = document.getElementById('telefone').value;

        const response = await fetch('/register', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ email, nome, endereco, telefone })
        });

        const data = await response.json();

        if (data.success) {
            alert("Cadastro criado com sucesso! Você está logado.");
            window.location.href = '/'; // Redirecionar para a página inicial
        } else {
            alert("Erro ao criar cadastro.");
        }
    }

    function adminLogin() {
        // Redirecionar para a página de login de administrador
        window.location.href = 'admin-login';
    }
</script>

</body>
</html>